<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fireworks"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gSaber"
        android:layout_width="151dp"
        android:layout_height="233dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBelowGSab"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRightGSab"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeftGSab"
        app:layout_constraintTop_toTopOf="@+id/guidelineBelowAch"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/green_saber" />

    <ImageView
        android:id="@+id/rSaber"
        android:layout_width="124dp"
        android:layout_height="258dp"
        android:rotation="-90"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBelowGSab"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRightRSab"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeftRSab"
        app:layout_constraintTop_toTopOf="@+id/guidelineAboveRSab"
        app:layout_constraintVertical_bias="0.108"
        app:srcCompat="@drawable/red_saber" />

    <TextView
        android:id="@+id/tvAchievement"
        android:layout_width="215dp"
        android:layout_height="47dp"
        android:autoSizeMaxTextSize="22sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBelowAch"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRiCon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeCon"
        app:layout_constraintTop_toTopOf="@+id/guidelineAbAch"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Congrats"
        android:layout_width="211dp"
        android:layout_height="40dp"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowRadius="5"
        android:text="Congratulations!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBeCon"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRiCon"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeCon"
        app:layout_constraintTop_toTopOf="@+id/guidelineAbCon"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtViewLevel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowRadius="5"
        android:text="You've reached \nthe level of"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="22sp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBeMes"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRiMess"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeMes"
        app:layout_constraintTop_toTopOf="@+id/guidelineAbMes" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAbCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2612859" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRiCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.76" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBeCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.31463748" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.27" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBeMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAbMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34062928" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRiMess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.74" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAbAch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.47" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBelowAch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeftRSab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03892944" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRightRSab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.29927006" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeftGSab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.59" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRightGSab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96107054" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBelowGSab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAboveRSab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBelowRSab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7893297" />





</androidx.constraintlayout.widget.ConstraintLayout>